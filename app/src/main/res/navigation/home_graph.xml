<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.drrbni.ui.HomeFragment"
        android:label="homeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_showPostFragment"
            app:destination="@id/showPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.example.drrbni.ui.CategoriesFragment"
        android:label="categoriesFragment"
        tools:layout="@layout/fragment_categories" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.example.drrbni.ui.NotificationsFragment"
        android:label="notificationsFragment"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.drrbni.ui.ProfileFragment"
        android:label="profileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/showPostFragment"
        android:name="com.example.drrbni.ShowPostFragment"
        android:label="fragment_show_post"
        tools:layout="@layout/fragment_show_post" />
</navigation>